<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DADADA"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="@string/AppTitle"
            android:textSize="35dp" />

        <Button
            android:id="@+id/btEntrar"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:onClick="btEntrar"
            android:text="@string/btStart"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            app:backgroundTint="#3D7887" />

        <Button
            android:id="@+id/btNotas"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:onClick="btNotas"
            android:text="@string/btPersonalNotes"
            android:textSize="20dp"
            android:layout_marginBottom="15dp"
            app:backgroundTint="#3D7887" />

        <Button
            android:id="@+id/btAbout"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:onClick="btAbout"
            android:text="@string/btAbout"
            android:textSize="20dp"
            app:backgroundTint="#3D7887" />
    </LinearLayout>

</LinearLayout>